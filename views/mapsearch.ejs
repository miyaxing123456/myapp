<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>地图搜索与poi结合</title>
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.11&key=cb69790e8e6a542549849df008420344&plugin=AMap.Autocomplete,AMap.PlaceSearch"></script> 
    <style>
        *{
            margin: 0;
            padding: 0;
        }
        #container{
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0;
            top: 0;
        }
        #box{
            width: 300px;
            position: absolute;
            right: 20px;
            top: 30px;
            background: #fff;
            border: 1px solid #eee;
            box-shadow: 0 0 5px #000;
        }
    </style>
</head>
<body>
    <div id="container"></div> 
    <div id="box">
        <input type="text"  id="searchInput">
        <div id="searchNode"></div>
    </div>
         
    </div>
    <script>
        var box=document.getElementById("box");
 
 
        var map=new AMap.Map("container",{
            zoom:10,//初始化地图的级别
            center:[120.197754,30.244694] //初始化地图的中心点
        });
 
 
       var searchNode=new AMap.Autocomplete({
           input:"searchInput"
       });
 
       var placeSearch=new AMap.PlaceSearch({
           map:map,
           pageSize:5,
           pageIndex:1,
           panel:"searchNode"
       });
 
       AMap.event.addListener(searchNode,"select",function(e){
           //console.log(e);
           placeSearch.search(e.poi.name);
       })
 
 
 
 
         
    </script>
</body>
</html>