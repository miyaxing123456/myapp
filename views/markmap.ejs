<!DOCTYPE html>
<html>
<head>
    <title>练习</title>
    <style type="text/css">
        *{
            padding:0;
            margin:0;
        }
        #container {
            width:100%; 
            height: 100%; 
            position: absolute;
            top: 0;
            left: 0;
        } 
    </style>
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.11&key=cb69790e8e6a542549849df008420344&plugin=AMap.Autocomplete,AMap.PlaceSearch"></script>
</head>
    <div id="container"></div>
    <input type="text" id="searchInput">
    <script type="text/javascript">
        var map=new AMap.Map("container",{
            zoom:10,
            center:[121.472644,31.231706]
        });
        map.setDefaultCursor('pointer');
        var icon1=new AMap.Icon({
            size:new AMap.Size(53,68),
            image:'https://a.amap.com/jsapi_demos/static/demo-center/icons/poi-marker-default.png',
            imageSize:new AMap.Size(20,30)
        });
        var marker=new AMap.Marker({
                position:map.getCenter(),
                icon:icon1
            });
            map.add([marker]);
        map.on("click",function(e){
            map.remove([marker]);
            marker=new AMap.Marker({
                position:[e.lnglat.lng,e.lnglat.lat],
                icon:icon1
            });
            map.add([marker]);
        });
    </script>
